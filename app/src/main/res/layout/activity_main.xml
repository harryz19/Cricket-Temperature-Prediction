<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/lgihtprimary">

   <ImageView
       android:layout_width="150dp"
       android:layout_height="300dp"
       android:layout_gravity="center_horizontal"
       android:layout_marginVertical="30dp"
       android:src="@drawable/thermo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Did you know you can determine the temperature outside by counting the number of chirps the cricket makes in 25 seconds and place that number in the box below:"
        android:layout_marginHorizontal="5dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="15dp"
        android:hint="Number of chirps in 25 seconds"
        android:textStyle="bold"
        android:id="@+id/nch"
        android:gravity="center"
        android:inputType="number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="CALCULATE TEMPERATURE"
        android:layout_marginHorizontal="5dp"
        android:textSize="20sp"
        android:id="@+id/bid"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:gravity="center"
        android:id="@+id/rid"/>

</LinearLayout>